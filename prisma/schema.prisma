generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    email     String   @unique()
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

model Post {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    title        String
    message      String
    creator      String
    tags         String[]
    selectedFile String
    likeCount    Int      @default(0)
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@map("posts")
}
